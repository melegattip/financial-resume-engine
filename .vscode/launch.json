{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with PostgreSQL",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/api/main.go",
            "env": {
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_USER": "postgres",
                "DB_PASSWORD": "postgres",
                "DB_NAME": "financial_resume",
                "PORT": "8080"
            },
            "preLaunchTask": "start-all",
            "postDebugTask": "stop-all"
        }
    ]
} 